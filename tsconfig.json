{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist", "scripts"]
} 